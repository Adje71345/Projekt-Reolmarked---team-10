<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Neutrale farver -->
    <Color x:Key="BackgroundColor">#F0F2F5</Color>
    <Color x:Key="LightBackground">#F5F7FA</Color>
    <Color x:Key="DarkBackground">#DDE3EC</Color>
    <Color x:Key="TextColor">#2D2D2D</Color>
    <Color x:Key="HeaderColor">#1A1A1A</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="SoftBorderColor">#D0D5DD</Color>
    <Color x:Key="PrimaryBlueColor">#1976D2</Color>
    <Color x:Key="PrimaryBlueLightColor">#3399FF</Color>




    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}" />
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="SoftBorderBrush" Color="{StaticResource SoftBorderColor}" />
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlueColor}" />
    <SolidColorBrush x:Key="PrimaryBlueLightBrush" Color="{StaticResource PrimaryBlueLightColor}" />




</ResourceDictionary>