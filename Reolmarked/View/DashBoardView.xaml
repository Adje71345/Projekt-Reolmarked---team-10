<UserControl x:Class="Reolmarked.View.DashBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Reolmarked.ViewModel"
             Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Info-kasser -->
        <UniformGrid Columns="3" Margin="0,0,0,20">
            <!-- Dagens salg -->
            <Border Style="{StaticResource WhitePanel}" Margin="10" MinHeight="80">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Dagens salg:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding SalesToday, StringFormat='{}{0} DKK'}" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <!-- Belægning -->
            <Border Style="{StaticResource WhitePanel}" Margin="10" MinHeight="80">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Belægning:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding OccupancyPercentage, StringFormat='{}{0}%'}" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <!-- Aktive lejere -->
            <Border Style="{StaticResource WhitePanel}" Margin="10" MinHeight="80">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Aktive lejere:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding RenterCount, StringFormat='{}{0}'}" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Graf og quick actions -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Style="{StaticResource WhitePanel}" Grid.Column="0" Margin="10">
                <TextBlock Text="Sales Graph (coming soon)" FontWeight="Bold"/>
            </Border>

            <Border Style="{StaticResource WhitePanel}" Grid.Column="1" Margin="10">
                <StackPanel>
                    <TextBlock Text="Quick Actions" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="Opret lejer" Command="{Binding CreateTenantCommand}" Style="{StaticResource GrayRoundedButton}"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Opret lejekontrakt" Command="{Binding CreateContractCommand}" Style="{StaticResource GrayRoundedButton}"/>
                        <Button Grid.Row="1" Grid.Column="0" Content="Ændre lejekontrakt" Command="{Binding EditContractCommand}" Style="{StaticResource GrayRoundedButton}"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="Opsig lejekontrakt" Command="{Binding TerminateContractCommand}" Style="{StaticResource GrayRoundedButton}"/>
                    </Grid>
                </StackPanel>
            </Border>

        </Grid>

        <!-- Kommende begivenheder -->
        <Border Style="{StaticResource WhitePanel}" Grid.Row="2" Margin="10">
            <StackPanel>
                <TextBlock Text="Kommende begivenheder" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                
                <DataGrid ItemsSource="{Binding Events}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeRows="False"
                          Focusable="False" RowHeight="28" Margin="0 5 0 0">
                    
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F7FA"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="Height" Value="28"/>
                        </Style>

                    </DataGrid.Resources>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DDE3EC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Event" Binding="{Binding Name}" Width="1*"/>
                        <DataGridTextColumn Header="Dato" Binding="{Binding Date}"  Width="*" MinWidth="90"/>
                        <DataGridTextColumn Header="Beskrivelse" Binding="{Binding Description}" Width="4*" MinWidth="350"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>