<UserControl x:Class="Reolmarked.View.RackPanels.AddRentContractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <!-- Farver -->
        <SolidColorBrush x:Key="TxtMain"   Color="#111827"/>
        <SolidColorBrush x:Key="TxtMuted"  Color="#6B7280"/>
        <SolidColorBrush x:Key="BdrSoft"   Color="#E5EEF8"/>
        <SolidColorBrush x:Key="BgrdInput" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BgrdNeutralBtn" Color="#F3F4F6"/>

        <!-- Corner radius -->
        <CornerRadius x:Key="PillRadius">18</CornerRadius>
        <!-- inputs -->
        <CornerRadius x:Key="BtnRadius">22</CornerRadius>
        <!-- store knapper -->
        <Thickness x:Key="PillPadding">16,12</Thickness>

        <!-- TextBox -->
        <Style x:Key="InputPill" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TxtMain}"/>
            <Setter Property="Background" Value="{StaticResource BgrdInput}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BdrSoft}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="{StaticResource PillRadius}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{StaticResource PillPadding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="ComboPill" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TxtMain}"/>
            <Setter Property="Background" Value="{StaticResource BgrdInput}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BdrSoft}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="{StaticResource PillPadding}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Bd" CornerRadius="{StaticResource PillRadius}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Grid Margin="8,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Margin="8,6" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" FontFamily="Segoe MDL2 Assets" Text="&#xE70D;"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.7"/>
                            </Grid>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" AllowsTransparency="True">
                                <Border Background="White" BorderBrush="{StaticResource BdrSoft}" BorderThickness="1" CornerRadius="12" Padding="4">
                                    <ScrollViewer MaxHeight="240">
                                        <StackPanel Margin="4">
                                            <ItemsPresenter/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="DatePill" TargetType="DatePicker">
            <Setter Property="Foreground" Value="{StaticResource TxtMain}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Border CornerRadius="{StaticResource PillRadius}"
                                    Background="{StaticResource BgrdInput}"
                                    BorderBrush="{StaticResource BdrSoft}"
                                    BorderThickness="1.5"/>
                            <Grid Margin="6,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="36"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox" Background="Transparent" BorderThickness="0"
                                                   Padding="10,8" VerticalContentAlignment="Center"/>
                                <TextBlock Grid.Column="1" FontFamily="Segoe MDL2 Assets" Text="&#xE787;"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.8"/>
                            </Grid>
                            <Popup x:Name="PART_Popup" Placement="Bottom" AllowsTransparency="True" StaysOpen="False">
                                <Border Background="White" BorderBrush="{StaticResource BdrSoft}" BorderThickness="1" CornerRadius="12">
                                    <Calendar x:Name="PART_Calendar"/>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Fuldbredde primær knap -->
        <Style x:Key="BtnPrimaryPill" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TxtMain}"/>
            <Setter Property="Background" Value="{StaticResource BgrdNeutralBtn}"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="{StaticResource BtnRadius}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- “X” knap -->
        <Style x:Key="BtnGhostPill" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Label-stil -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TxtMuted}"/>
            <Setter Property="Margin" Value="0,6,0,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <!-- TILFØJET: hvid afrundet baggrund bag hele indholdet -->
    <Grid>
        <Border Background="#FFFFFF"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="24"
                Margin="-13,-13,-107,-14"
                IsHitTestVisible="False"/>

        <Grid Margin="2,0,-2,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Opret lejekontrakt" FontSize="20" FontWeight="SemiBold"/>
                <Button Content="&#x2715;" FontSize="16" Command="{Binding CloseCommand}"
                        DockPanel.Dock="Right" Style="{StaticResource BtnGhostPill}"/>
            </DockPanel>

            <!-- Felter -->
            <StackPanel Grid.Row="1">
                <!-- Reol -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Reol" Style="{StaticResource FormLabel}" Margin="0,8,0,0"/>
                    <TextBox Grid.Column="1" Text="{Binding RackId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputPill}"/>
                </Grid>

                <!-- Lejer (navn) + forslag (vis KUN ved fokus + tekst + forslag) -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Lejer (navn)" Style="{StaticResource FormLabel}"/>
                    <StackPanel Grid.Column="1">
                        <TextBox x:Name="NameBox" Text="{Binding RenterNameQuery, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputPill}"/>
                        <Border CornerRadius="12" Background="White"
                                BorderBrush="{StaticResource BdrSoft}" BorderThickness="1" Margin="0,8,0,0" Padding="4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- Vis når feltet har fokus -->
                                        <DataTrigger Binding="{Binding ElementName=NameBox, Path=IsKeyboardFocusWithin}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <!-- Skjul hvis ingen forslag -->
                                        <DataTrigger Binding="{Binding NameSuggestions.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <!-- Skjul hvis tomt -->
                                        <DataTrigger Binding="{Binding ElementName=NameBox, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ItemsControl ItemsSource="{Binding NameSuggestions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Display}"
                                                Command="{Binding DataContext.PickRenterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding RenterId}"
                                                HorizontalContentAlignment="Left"
                                                BorderThickness="0" Background="Transparent" Padding="10,6"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Lejer-ID -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="160.18"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Lejer-ID" Style="{StaticResource FormLabel}" Margin="0,8,0,0"/>
                    <TextBox Grid.Column="1" Text="{Binding RenterId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputPill}" Margin="0,0,-85,0"/>
                </Grid>

                <!-- Startdato -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="160.18"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Startdato" Style="{StaticResource FormLabel}" Margin="0,8,0,0"/>
                    <DatePicker Grid.Column="1" SelectedDate="{Binding StartDateTime}" Style="{StaticResource DatePill}"/>
                </Grid>

                <!-- Slutdato + Ingen slutdato -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Slutdato" Style="{StaticResource FormLabel}" Margin="0,8,0,0"/>
                    <StackPanel Grid.Column="1">
                        <DatePicker SelectedDate="{Binding EndDateTime}" IsEnabled="{Binding EndDateEnabled}" Style="{StaticResource DatePill}"/>
                        <CheckBox Content="Ingen slutdato" IsChecked="{Binding NoEnd}" Margin="12,8,0,0" Foreground="{StaticResource TxtMain}" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Betalingsmetode -->
                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Betalingsmetode" Style="{StaticResource FormLabel}" Margin="0,8,0,0"/>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding PaymentMethods}" SelectedItem="{Binding SelectedPaymentMethod}"
                              DisplayMemberPath="Name" Style="{StaticResource ComboPill}"/>
                </Grid>
            </StackPanel>

            <!-- Opret lejekontrakt -->
            <Button Grid.Row="2" Content="Opret lejekontrakt" Command="{Binding SubmitCommand}"
                    Style="{StaticResource BtnPrimaryPill}" Margin="0,14,0,6"/>
        </Grid>
    </Grid>
</UserControl>
