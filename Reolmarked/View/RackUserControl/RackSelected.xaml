<UserControl x:Class="Reolmarked.View.RackSideContent.RackSelected"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.View.RackSideContent"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="200">
    <Border Background="White" CornerRadius="15">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Reol"
                   VerticalAlignment="Center"
                   Margin="10"/>
            <TextBlock Text="{Binding SelectedRack.RackId}"/>

            <Grid Grid.Row="1">
                <TextBlock Text="Status"
               FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Border Background="White"
            Width="100"
            Height="20"
            CornerRadius="8"
            BorderBrush="LightGray"
            BorderThickness="1"
            HorizontalAlignment="Right" VerticalAlignment="Center"
            Margin="0,0,15,0">
                    <TextBlock Text="bind this"/>
                </Border>
            </Grid>

            <Grid Grid.Row="2">
                <TextBlock Text="Lejer"
               FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Border Background="White"
            Width="100"
            Height="20"
            CornerRadius="8"
            BorderBrush="LightGray"
            BorderThickness="1"
            HorizontalAlignment="Right" VerticalAlignment="Center"
            Margin="0,0,15,0">
                    <TextBlock Text="Bind this"/>
                </Border>
            </Grid>

            <Grid Grid.Row="3">
                <TextBlock Text="Periode"
                           FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Border Background="White"
                        Width="100"
                        Height="20"
                        CornerRadius="8"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Margin="0,0,15,0">
                    <TextBlock Text="Bind this"/>
                </Border>
            </Grid>

            <Grid Grid.Row="4">
                <TextBlock Text="Dage tilbage"
               FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Border Background="White"
            Width="100"
            Height="20"
            CornerRadius="8"
            BorderBrush="LightGray"
            BorderThickness="1"
            HorizontalAlignment="Right" VerticalAlignment="Center"
            Margin="0,0,15,0">
                    <TextBlock Text="Bind this"/>
                </Border>
            </Grid>

        </Grid>
    </Border>
</UserControl>
