<UserControl x:Class="Reolmarked.View.LabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    
        
        <Border Style="{StaticResource WhitePanel}"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="450" Height="400">

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!--Input-->
                <RowDefinition Height="Auto"/> <!--knapper-->
                <RowDefinition Height="*"/> <!--Label Preview-->
            </Grid.RowDefinitions>


            <StackPanel>
                <!-- Input -->
                <StackPanel Grid.Row="0" Margin="0 0 0 20" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="Reol:" Width="60" VerticalAlignment="Center"/>
                        <TextBox Width="150" 
                                 Text="{Binding RackId, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Pris:" Width="60" VerticalAlignment="Center"/>
                        <TextBox Width="150" 
                                 Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                    
                    <Button Content="Generér label"
                            Width="120" Height="30"
                            Margin="0 0 10 0"
                            Style="{StaticResource GrayRoundedButton}"
                            Command="{Binding GenerateCommand}"/>
                    
                    <Button Content="Print"
                            Width="85" Height="30"
                            Style="{StaticResource GrayRoundedButton}"
                            Command="{Binding PrintCommand}"/>
                </StackPanel>

                <!-- Preview -->
                <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Padding="5"
                        Width="300" Height="150" 
                        HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Image Source="{Binding BarcodeImage}" Stretch="None"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
  
</UserControl>
