<UserControl x:Class="Reolmarked.View.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reolmarked.View"
             mc:Ignorable="d" 
             Background="{DynamicResource WhiteBrush}">
    <Border CornerRadius="10" Padding="10">
        <StackPanel VerticalAlignment="Stretch">
            <TextBlock Text="Reolmarked"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource HeaderBrush}"
                       Margin="0,0,0,20" />

            <RadioButton Content="Hjem"
                         Style="{StaticResource SidebarButtonStyle}"
                         GroupName="SidebarGroup"
                         IsChecked="{Binding SelectedView, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=DashBoard}" />

            <RadioButton Content="Lejere"
                         Style="{StaticResource SidebarButtonStyle}"
                         GroupName="SidebarGroup"
                         IsChecked="{Binding SelectedView, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Renter}" />

            <RadioButton Content="Reoler" 
                         Style="{StaticResource SidebarButtonStyle}" 
                         GroupName="SidebarGroup"
                         IsChecked="{Binding SelectedView, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Rack}" />
            
            <RadioButton Content="Varer" Style="{StaticResource SidebarButtonStyle}" GroupName="SidebarGroup" />
            <RadioButton Content="Salg" Style="{StaticResource SidebarButtonStyle}" GroupName="SidebarGroup"/>
            <RadioButton Content="Afregning" Style="{StaticResource SidebarButtonStyle}" GroupName="SidebarGroup"/>
        </StackPanel>
    </Border>
</UserControl>

