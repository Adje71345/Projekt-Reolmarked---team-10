<UserControl x:Class="Reolmarked.View.AddRenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="360">

    <Border Style="{StaticResource WhitePanel}">
        <StackPanel>

            <!-- Overskrift -->
            <TextBlock Text="Opret ny lejer" FontWeight="Bold" FontSize="16" Margin="0,0,0,12" Foreground="{DynamicResource TextBrush}"/>

            <!-- Fornavn -->
            <TextBlock Text="Fornavn" FontSize="12" Foreground="{DynamicResource TextBrush}"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12"/>

            <!-- Efternavn -->
            <TextBlock Text="Efternavn" FontSize="12" Foreground="{DynamicResource TextBrush}"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12"/>

            <!-- Telefon -->
            <TextBlock Text="Telefonnummer" FontSize="12" Foreground="{DynamicResource TextBrush}"/>
            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12"/>

            <!-- Email -->
            <TextBlock Text="Email" FontSize="12" Foreground="{DynamicResource TextBrush}"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12"/>

            <!-- Betalingsmetode -->
            <TextBlock Text="Betalingsmetode" FontSize="12" Foreground="{DynamicResource TextBrush}"/>
            <ComboBox ItemsSource="{Binding PaymentMethods}"
                SelectedValue="{Binding PaymentMethodId, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="PaymentMethodId"
                DisplayMemberPath="Name"
                Margin="0,4,0,12"/>

            <!-- Knapper -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Annuller" Width="90" Margin="0,0,8,0" Command="{Binding CancelCommand}" />
                <Button Content="Opret lejer" Width="110" Command="{Binding AddRenterCommand}" />
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
